<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
           http://www.springframework.org/schema/beans 
           http://www.springframework.org/schema/beans/spring-beans.xsd"
           default-init-method="defaultInit"
           default-destroy-method="defaultDestroy"
           >

    <!-- Address Bean -->
    <bean id="a1" class="com.ig.sbeans.ClassA">
    	<property name="b" ref="b1"/>
    	
    	<!-- constructor will generate cyclic or dead lock issue as a is dependent on b and b is dependent on a -->
    	<!-- <constructor-arg ref="b1"/>				-->
    </bean>
    
    <bean id="b1" class="com.ig.sbeans.ClassB">
    	<property name="a" ref="a1"/>
    	
    	<!-- constructor will generate cyclic or dead lock issue as a is dependent on b and b is dependent on a -->
    	<!-- <constructor-arg ref="a1"/>				-->
    </bean>
    
</beans>
