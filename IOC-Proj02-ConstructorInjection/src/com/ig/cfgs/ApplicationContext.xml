<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
           http://www.springframework.org/schema/beans 
           http://www.springframework.org/schema/beans/spring-beans.xsd"
           default-init-method="defaultInit"
           default-destroy-method="defaultDestroy"
           >

    <!-- Address Bean -->
    <bean id="b" factory-bean="factory" factory-method="getInstanceB" primary="true"/>
    <bean id="factory" class="com.ig.sbeans.UserDefineClassFactory"/>
    <bean id="a" class = "com.ig.sbeans.UserDefineClassFactory" factory-method="getInstanceA"/>
    
    <bean id="smg" class="com.ig.sbeans.SeasonMessageGenerator" autowire="constructor">
    	<!-- if we leave empty then primary object=>"b" will be assigned-->
    	<constructor-arg name="service" ref="a"/>
    </bean>
   
    
</beans>
